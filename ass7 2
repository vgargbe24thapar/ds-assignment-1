#include <iostream>
using namespace std;

/*
Time Complexity:
Best:    O(n^2)
Average: O(n^2)
Worst:   O(n^2)

Space Complexity: O(1)
*/

void improvedSelectionSort(int arr[], int n) {
    int left = 0, right = n - 1;

    while (left < right) {
        int minIndex = left, maxIndex = left;

        // Find min and max in unsorted part
        for (int i = left; i <= right; i++) {
            if (arr[i] < arr[minIndex])
                minIndex = i;
            if (arr[i] > arr[maxIndex])
                maxIndex = i;
        }

        // Swap minimum to left
        swap(arr[left], arr[minIndex]);

        // If max was at left, after swapping min, it moved to minIndex
        if (maxIndex == left)
            maxIndex = minIndex;

        // Swap maximum to right
        swap(arr[right], arr[maxIndex]);

        left++;
        right--;
    }
}

int main() {
    int arr[] = {7, 2, 8, 1, 6, 3, 5, 4};
    int n = sizeof(arr) / sizeof(arr[0]);

    improvedSelectionSort(arr, n);

    cout << "Sorted array: ";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";

    return 0;
}
